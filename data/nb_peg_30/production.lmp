# Description: Input file for simulating a PEG-water mixture

units real
atom_style full
bond_style harmonic
angle_style charmm
dihedral_style charmm
pair_style lj/cut/tip4p/long 6 7 6 9 0.1546 14.0
kspace_style pppm/tip4p 1.0e-5
special_bonds lj 0.0 0.0 0.5

read_data equilibrate.data
include parameters-h2o.inc
include parameters-peg.inc

# define groups
group PEG type 1 2 3 4 5
group H2O type 6 7
group HYD type 3 5 7

# dynamics
timestep 1
fix myshk H2O shake 1.0e-5 200 0 b 6 a 9
fix mynvt all nvt temp 300 300 100

# output - print positions every 2 picosecond
dump mydmp1 all xtc 2000 production-all.xtc
dump mydmp2 HYD xtc 2000 production-hyd.xtc
thermo 2000

# run 
run 0 # 10000000 # 10 ns
undump mydmp1
undump mydmp2
 
write_data prod.data
write_dump all atom production-all.lammpstrj
write_dump HYD atom production-hyd.lammpstrj

set mol * image 0 0 0

run 0 # 20000

write_dump all custom production-xu.lammpstrj id type xu yu zu 


